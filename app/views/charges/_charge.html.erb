<tr>
  <td>
    <%= charge.id %>
  </td>
  <td>
    <%= charge.date.to_s(:short_date) %>
  </td>
  <td>
    <%= charge.amount %>
  </td>
  <td>
    <%= charge.status %>
  </td>
  <td>
    <%= charge.paid? %>
  </td>
  <td>
    <%= link_to 'Try Again', repay_url(user_id: current_user.id, amount: charge.amount), {method: :post} %>
  </td>
</tr>
