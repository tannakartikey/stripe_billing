<%= form_for :new_charge, url: charge_url, method: :post do |f| %>
	<%= f.label :user %>
	<%= f.collection_select :user_id, User.all, :id, :email %><br>
	<%= f.label :amount %>
	<%= f.text_field :amount%><br>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<%= f.submit "Charge" %>
<% end %>
